<Window x:Class="WorksheetSelectorApp.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WorksheetSelectorApp"
        xmlns:views1="clr-namespace:Jbpc.Common.GUI.WPF.WorksheetSelector.Views"
        xmlns:views="clr-namespace:WorksheetSelectorApp.Views"
        Title="Main Window"
        mc:Ignorable="d"
        SizeToContent="WidthAndHeight" Background="Ivory" MinWidth="400" MinHeight="400">
    <Grid Height="Auto">
        <Grid.RowDefinitions>
            <RowDefinition x:Name="WorksheetSelector" Height="Auto"/>
        </Grid.RowDefinitions>
        <views:WorksheetSelectorView Grid.Row="0" DataContext="{Binding Path=ViewModel}"/>
    </Grid>
</Window>
